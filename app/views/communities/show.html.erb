<%- model_class = Community -%>
<div class="page-header">
  <h1><%=t '.title', :default => Community %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @community.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:location) %></dt>
      <dd><pre class="prettyprint"><%= @community.location %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:scope) %></dt>
      <dd><pre class="prettyprint"><%= @community.scope %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:verified) %></dt>
      <dd><pre class="prettyprint"><%= @community.verified %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              communities_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_community_path(@community), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              community_path(@community),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

